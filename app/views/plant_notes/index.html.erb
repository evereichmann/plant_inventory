<p id="notice"><%= notice %></p>

<h1>Plant Notes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Note date</th>
      <th>Text field</th>
      <th>Plant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plant_notes.each do |plant_note| %>
      <tr>
        <td><%= plant_note.title %></td>
        <td><%= plant_note.note_date %></td>
        <td><%= plant_note.text_field %></td>
        <td><%= plant_note.plant_id %></td>
        <td><%= link_to 'Show', plant_note %></td>
        <td><%= link_to 'Edit', edit_plant_note_path(plant_note) %></td>
        <td><%= link_to 'Destroy', plant_note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

