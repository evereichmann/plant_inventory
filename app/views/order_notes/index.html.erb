<p id="notice"><%= notice %></p>

<h1>Order Notes</h1>

<table>
  <thead>
    <tr>
      <th>Information</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_notes.each do |order_note| %>
      <tr>
        <td><%= order_note.information %></td>
        <td><%= order_note.order_id %></td>
        <td><%= link_to 'Show', order_note %></td>
        <td><%= link_to 'Edit', edit_order_note_path(order_note) %></td>
        <td><%= link_to 'Destroy', order_note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

