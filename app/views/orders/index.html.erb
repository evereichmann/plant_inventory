<div class="ui container">
<div class="ui top attached tabular menu">
<div class="item active">
<h1>Orders</h1>
</div>
<div class="item">
<h1><%= link_to 'Plants', plants_path, method: :get %></h1>
</div>
<div class="item">
<h1 ><%= link_to 'Dashboard', pages_dashboard_path, method: :get %></h1>
</div>
<div class="right menu">
    <div class="item">
<%= button_to "logout", destroy_user_session_path, method: :delete, class:"ui big button"%>
</div>
</div>
</div>

<div class="ui bottom attached segment">
<table class="ui celled table mobile hidden">
  <thead>
    <tr>
      <th>Seller name</th>
      <th>Country origin</th>
      <th>Units</th>
      <th>Total price</th>
      <th>Data order</th>
      <th>Data shipped</th>
      <th>Multiple</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td id="order"><%= order.seller_name %></td>
        <td id="order"><%= order.country_origin %></td>
        <td id="order"><%= order.units %></td>
        <% if order.total_price != nil%>
        <td id="order">$<%= order.total_price %></td>
        <% else %>
        <td id="order"></td>
        <%end%>
        <% if order.date_order != nil%>
        <td id="order"><%= order.date_order.month %>/<%= order.date_order.day %>/<%= order.date_order.year %></td>
        <%else%>
        <td id="order">Not Recorded</td>
        <%end%>
        <td id="order"><%= order.date_shipped == nil ? "NSY" : "#{order.date_shipped.month}/#{order.date_shipped.day}/#{order.date_shipped.year}" %></td>
        <td id="order"><%= order.multiple %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to '<button type="button" class="ui button">New Order</button>'.html_safe, new_order_path %>
</div>
</div>
