<div class="ui container">

<p>
  <strong>Seller:</strong>
  <%=  @plant.order.seller_name %>
</p>

<p>
  <strong>Name:</strong>
  <%= @plant.name %>
</p>

<p>
  <strong>Unit price:</strong>
  <%= @plant.unit_price %>
</p>

<p>
  <strong>Arrival date:</strong>
  <%= @plant.arrival_date.month %>/<%= @plant.arrival_date.day %>/<%= @plant.arrival_date.year %>
</p>


<p>
  <strong>Days In Box:</strong>
    <% a = Date.parse("#{@plant.order.date_shipped}") %>
    <% b = Date.parse("#{@plant.arrival_date}") %>
    <% c = b.mjd - a.mjd %>
    <%= %"#{c} days" %>
</p>

<p>
  <strong>Condition:</strong>
  <%= @plant.condition %>
</p>

<p>
  <strong>Recovery date:</strong>
  <%= @plant.recovered? %>
</p>

<% if @plant.sold == true %>
<p>
  <strong>Sold:</strong>
  <%= @plant.sold %>
</p>

<p>
  <strong>Price:</strong>
  <%= @plant.price %>
</p>
<% else %>
<% end %>

<% if @plant.avatar.attached?%>
  <img src="<%=(url_for(@plant.avatar))%>">
<% end %>  

<%= link_to 'Edit', edit_plant_path(@plant) %> |
<%= link_to 'Back', plants_path %>
</div>