<div class="ui container">
<h1>Plants</h1>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Unit price</th>
      <th>Arrival date</th>
      <th>Condition</th>
      <th>Recovery date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plants.each do |plant| %>
      <% if plant.sold == false %>
      <tr>
        <td><%= plant.name %></td>
        <td><%= plant.unit_price %></td>
        <td><%= plant.arrival_date.month %>/<%= plant.arrival_date.day %>/<%= plant.arrival_date.year %></td>
        <td><%= plant.condition %></td>
        <td><%= plant.is_recovered  %></td>
        <td><%= link_to 'Show', plant %></td>
        <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
        <td><%= link_to 'Destroy', plant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
       <% else %>
       <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plant', new_plant_path %>

<br>
<h1>Sold</h1>
<table class="ui celled table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Unit price</th>
      <th>Arrival date</th>
      <th>Recovery date</th>
      <th>Sold</th>
      <th>Price</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @plants.each do |plant| %>
      <% if plant.sold == true %>
      <tr>
        <td><%= plant.name %></td>
        <td><%= plant.unit_price %></td>
        <td><%= plant.arrival_date %></td>
        <td><%= plant.is_recovered %></td>
        <td><%= plant.sold %></td>
        <td><%= plant.price %></td>
        <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
      </tr>
      <% else%>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>